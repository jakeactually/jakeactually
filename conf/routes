GET     /                           controllers.HomeController.index
GET     /poster                     controllers.HomeController.poster(text: String ?= "")
GET     /jwt                        controllers.HomeController.jwt

GET     /file/ls                    controllers.FileController.ls(dir: String)
POST    /file/upload                controllers.FileController.upload
POST    /file/newDir                controllers.FileController.newDir
GET     /file/download              controllers.FileController.download(file: String)
POST    /file/rename                controllers.FileController.rename
POST    /file/move                  controllers.FileController.move
POST    /file/delete                controllers.FileController.delete
GET     /thumb                      controllers.ThumbController.index(image: String)

GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
